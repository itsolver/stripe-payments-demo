{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
        "source": "/",
        "function": "app"
      },
      {
        "source": "/config",
        "function": "app"
      },
      {
        "source": "/orders",
        "function": "app"
      },
      {
        "source": "/orders/**",
        "function": "app"
      },
      {
        "source": "/products",
        "function": "app"
      },
      {
        "source": "/products/**",
        "function": "app"
      },
      {
        "source": "/webhook",
        "function": "app"
      }]
}
}